<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding = "true"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingStart="@dimen/small_size"
            android:paddingEnd="@dimen/small_size"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_history_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small_size"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_list"
                    android:drawablePadding="@dimen/small_size"
                    android:text="todoid"/>

                <TextView
                    android:id="@+id/tv_order_history_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/small_size"
                    android:drawableStart="@drawable/ic_time"
                    android:layout_marginTop="@dimen/normal_size"
                    android:padding="@dimen/small_size"
                    android:text="todotime"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_history_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small_size"
                    android:text="todoprice"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/tv_order_history_track"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_size"
                    android:padding="@dimen/small_size"
                    android:background="@color/orange"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="Track"/>

            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>